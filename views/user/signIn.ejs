<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Matrix E-Ticaret - Oturum Aç</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #F9F7F7; /* Arka plan rengi */
        }
        .container {
            width: 350px;
            padding: 40px;
            background: #DBE2EF; /* Ana konteyner arka plan rengi */
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
            text-align: center;
        }
        h2 {
            margin-bottom: 30px;
            color: #112D4E; /* Başlık rengi */
        }
        input[type="email"],
        input[type="password"],
        input[type="submit"] {
            width: 100%;
            padding: 15px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            font-size: 16px;
            background-color: #fff; /* Input arka plan rengi */
        }
        input[type="submit"] {
            background-color: #3F72AF; /* Gönder butonu arka plan rengi */
            color: #fff;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        input[type="submit"]:hover {
            background-color: #2A4365; /* Gönder butonu hover arka plan rengi */
        }
        .register {
            margin-top: 15px;
            color: #666;
        }
        .register a {
            color: #3F72AF; /* Kaydol linki rengi */
            text-decoration: none;
        }
        .error {
            color: red;
            margin-top: 5px;
            text-align: center; /* Hata mesajının ortalanması */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Matrix E-Ticaret</h2>
        <h3>Oturum Aç</h3>
        <form id="loginForm">
            <input type="email" name="email" id="email" placeholder="E-posta" required><br>
            <input type="password" name="password" id="password" placeholder="Şifre" required><br>
            <input type="submit" value="Oturum Aç">
            <div id="errorMessage" class="error"></div>
        </form>
        <div class="register">
            Henüz bir hesabınız yok mu? <a href="/user/signUp">Hemen Kaydol</a>
        </div>
    </div>

    <script>
        document.getElementById("loginForm").addEventListener("submit", function(event) {
            event.preventDefault(); // Formun normal gönderimini engelle

            const email = document.getElementById("email").value;
            const password = document.getElementById("password").value;
            const errorMessage = document.getElementById("errorMessage");

            const userArray = {
                email: "kullanici@example.com",
                password: "sifre123"
            };

            // E-posta ve şifre kontrolü
            // if (email === userArray.email && password npm=== userArray.password) {
            
            if (email === userArray.email && password === userArray.password) {    
                // Doğru kullanıcı bilgileri, ana sayfaya yönlendir
                window.location.href = "/user";
            } else {
                // Hatalı kullanıcı bilgileri, hata mesajı göster
                errorMessage.innerHTML = "E-posta veya şifre yanlış.";
            }
        });
    </script>
</body>
</html>
